@model FanMailModel;

<h2>Send him fan mail</h2>
<form method="post">
    <label>From:</label>
    <input id="txtFrom" asp-for="From" /><br />
    <label>Subject:</label>
    <input id="txtSubject" asp-for="Subject" /><br />
    <label>Message:</label>
    <textarea id="txtMessage" asp-for="Message" rows="4"></textarea><br />
    <input id="btnSend" type="submit" value="Send Message" />

    <div asp-validation-summary="All"></div>
</form>



<script src="js/FanMail.js"></script>